<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/notification_icon_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:src="@mipmap/ic_launcher"/>
    <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/time_tv" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/notification_icon_iv" android:layout_alignParentRight="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/content_ll" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/time_tv" android:layout_toRightOf="@+id/notification_icon_iv" android:layout_alignTop="@+id/notification_icon_iv" android:layout_alignBottom="@+id/notification_icon_iv">
        <TextView android:textSize="18sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/content_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
    </LinearLayout>
</RelativeLayout>