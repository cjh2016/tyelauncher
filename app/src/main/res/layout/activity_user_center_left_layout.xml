<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:background="@mipmap/user_info_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_back" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="17dp" android:src="@drawable/back_icon_selector"/>
    <ImageView android:id="@+id/setting" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_marginRight="7dp" android:src="@drawable/setting_selector" android:layout_alignParentRight="true"/>
    <ImageView android:id="@+id/img_dot_setting" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/shape_dot" android:layout_alignTop="@+id/setting" android:layout_alignRight="@+id/setting" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="19sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/user_center_title_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/user_center_title" android:layout_toLeftOf="@+id/setting" android:layout_toRightOf="@+id/iv_back" android:layout_alignTop="@+id/iv_back" android:layout_alignBottom="@+id/iv_back"/>
    <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_parent_manger" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginBottom="27dp" android:text="@string/hint_parent_manager" android:drawableLeft="@mipmap/btn_jiazhangguanli" android:drawablePadding="3dp" android:layout_alignParentBottom="true"/>
    <ImageView android:id="@+id/user_icon" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="30dp" android:src="@drawable/pic_tx_default" android:scaleType="fitCenter" android:layout_below="@+id/user_center_title_tv" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="19sp" android:textColor="@color/white" android:id="@+id/user_name_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:text="徐小奇" android:layout_below="@+id/user_icon" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="13sp" android:textColor="#ffffff" android:id="@+id/tv_userphone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/user_name_top" android:layout_centerHorizontal="true"/>
</RelativeLayout>