<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:background="#33000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/wifidialog_up_corner" android:layout_width="@dimen/px686" android:layout_height="@dimen/px312" android:layout_centerInParent="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <TextView android:textSize="@dimen/px36" android:textColor="#333333" android:id="@+id/dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="添加学校" android:layout_centerInParent="true" android:lineSpacingMultiplier="1.3"/>
        </RelativeLayout>
        <RelativeLayout android:background="#ffffff" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <EditText android:textSize="@dimen/px28" android:textColor="#333333" android:textColorHint="#999999" android:ellipsize="end" android:id="@+id/dialog_content" android:background="@drawable/edit_bg_addschool" android:paddingLeft="@dimen/px20" android:paddingRight="@dimen/px20" android:focusable="true" android:layout_width="@dimen/px560" android:layout_height="@dimen/px66" android:hint="请准确、完整的输入学校名称" android:singleLine="true" android:maxLength="24" android:layout_centerInParent="true" android:lineSpacingMultiplier="1.3"/>
        </RelativeLayout>
        <View android:background="#efefef" android:layout_width="match_parent" android:layout_height="@dimen/px1"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <TextView android:textSize="@dimen/px32" android:textColor="#999999" android:gravity="center" android:id="@+id/btu_negative" android:background="@drawable/white_bottomleft_corner" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_toRightOf="@+id/btu_negative"/>
            <View android:background="#efefef" android:layout_width="@dimen/px1" android:layout_height="match_parent"/>
            <TextView android:textSize="@dimen/px32" android:textColor="#0578fa" android:gravity="center" android:id="@+id/btu_positive" android:background="@drawable/white_bottomright_corner" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_toRightOf="@+id/btu_positive"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>