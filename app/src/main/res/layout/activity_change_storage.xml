<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/rel_top" android:background="#fff" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rel_login_up" android:background="@drawable/logintop_bar" android:layout_width="match_parent" android:layout_height="@dimen/px120">
        <ImageView android:id="@+id/iv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/px30" android:layout_marginTop="@dimen/px50" android:src="@drawable/back_icon_selector"/>
        <TextView android:textSize="@dimen/px36" android:textColor="#ffffffff" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="@dimen/px50" android:layout_marginTop="@dimen/px50" android:text="存储路径" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_inner_storage" android:paddingLeft="@dimen/px200" android:paddingRight="@dimen/px200" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:padding="@dimen/px30" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/px58" android:src="@drawable/ic_inner_storage" android:scaleType="centerInside"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/px15" android:text="内部存储"/>
                <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_inner_storage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已用7.5G，可用0.5G"/>
            </LinearLayout>
            <android.support.v4.widget.Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <ImageView android:id="@+id/iv_inner_storage_selected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_selected"/>
        </LinearLayout>
        <View android:background="#ffefefef" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_sd_card" android:paddingLeft="@dimen/px200" android:paddingRight="@dimen/px200" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:padding="@dimen/px30" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/px58" android:src="@drawable/ic_sd_card" android:scaleType="centerInside"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/px15" android:text="SD卡"/>
                <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_sd_card" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已用7.5G，可用0.5G"/>
            </LinearLayout>
            <android.support.v4.widget.Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <ImageView android:id="@+id/iv_sd_card_selected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_selected"/>
        </LinearLayout>
        <View android:background="#ffefefef" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>