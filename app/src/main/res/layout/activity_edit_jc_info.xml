<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/activity_main" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:background="@drawable/banner03" android:layout_width="match_parent" android:layout_height="@dimen/px400">
                <ImageView android:id="@+id/but_back" android:layout_width="wrap_content" android:layout_height="@dimen/px50" android:layout_marginLeft="@dimen/px30" android:layout_marginTop="@dimen/px55" android:src="@drawable/but_back"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp">
                <TextView android:textSize="@dimen/px36" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="填写教材信息" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <View android:background="#f5f5f5" android:layout_width="match_parent" android:layout_height="@dimen/px1"/>
            <LinearLayout android:orientation="vertical" android:background="#ffffffff" android:paddingLeft="@dimen/px140" android:paddingRight="@dimen/px100" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView android:id="@+id/jc_list" android:background="#ffffffff" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" card_view:cardElevation="0dp"/>
                </LinearLayout>
            </LinearLayout>
            <Button android:textSize="@dimen/px35" android:textColor="#fff7f7f7" android:layout_gravity="center_horizontal" android:id="@+id/save" android:background="@drawable/login_circle_blue" android:layout_width="@dimen/px582" android:layout_height="@dimen/px80" android:layout_marginTop="@dimen/px60" android:text="完成"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>