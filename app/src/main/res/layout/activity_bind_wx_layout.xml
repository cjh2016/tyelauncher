<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header_content_rl" android:background="@mipmap/header_view_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="196dp">
        <include android:id="@+id/title_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" layout="@layout/activity_title_layout"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/hint_tv" android:paddingLeft="200dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="步即可绑定，随时了解孩子学习状况，并对学习机进行管理。" android:layout_below="@+id/title_layout"/>
    </RelativeLayout>
    <ImageView android:id="@+id/line_view" android:paddingLeft="52dp" android:paddingTop="12dp" android:paddingRight="52dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="64dp" android:src="@drawable/line" android:layout_below="@+id/header_content_rl" android:layout_centerHorizontal="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/step_one_ll" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toLeftOf="@+id/line_view" android:layout_below="@+id/header_content_rl" android:layout_alignTop="@+id/line_view">
        <TextView android:textSize="21sp" android:textColor="@color/blue_new_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="01 关注公众号"/>
        <TextView android:textSize="15sp" android:textColor="@color/gary" android:paddingLeft="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/follow_hint_text"/>
        <ImageView android:layout_width="135dp" android:layout_height="135dp" android:layout_marginLeft="28dp" android:layout_marginTop="25dp" android:src="@drawable/erweima_icon"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/step_two_ll" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toRightOf="@+id/line_view" android:layout_below="@+id/header_content_rl" android:layout_alignTop="@+id/line_view">
        <TextView android:textSize="21sp" android:textColor="@color/blue_new_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="02 绑定学习机"/>
        <TextView android:textSize="15sp" android:textColor="@color/gary" android:paddingLeft="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/bind_hint_text"/>
        <ImageView android:id="@+id/iv_eria2" android:layout_width="135dp" android:layout_height="135dp" android:layout_marginLeft="28dp" android:layout_marginTop="25dp" android:src="#999999" android:scaleType="fitXY"/>
    </LinearLayout>
    <Button android:textSize="15sp" android:textColor="@color/gary" android:id="@+id/bind_wx_ok_btn" android:background="@drawable/bind_ok_btn_bg_clickable_false" android:layout_width="177dp" android:layout_height="40dp" android:layout_marginBottom="21dp" android:text="我已绑定" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>