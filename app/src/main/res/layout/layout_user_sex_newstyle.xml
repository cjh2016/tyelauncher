<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:background="#33000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/container_picker" android:background="@drawable/shape_pop_bg" android:layout_width="@dimen/px601" android:layout_height="@dimen/px360" android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/px28" android:textColor="#ff333333" android:gravity="center" android:id="@+id/title" android:background="@drawable/shape_pop_sex_grey" android:layout_width="match_parent" android:layout_height="@dimen/px100" android:text="选择性别" android:layout_alignParentRight="true"/>
        <RelativeLayout android:gravity="center" android:id="@+id/male_layout" android:background="@drawable/white_bottom_corner" android:layout_width="match_parent" android:layout_height="@dimen/px260">
            <RelativeLayout android:gravity="center" android:id="@+id/rel_boy" android:layout_width="@dimen/px260" android:layout_height="@dimen/px260">
                <ImageView android:id="@+id/iv_sex_boy" android:clickable="true" android:layout_width="@dimen/px100" android:layout_height="@dimen/px100" android:src="@drawable/selsex_boy" android:layout_centerHorizontal="true"/>
                <TextView android:textSize="@dimen/px28" android:id="@+id/tv_sex_boy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px40" android:text="男生" android:layout_below="@+id/iv_sex_boy" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:id="@+id/rel_girl" android:layout_width="@dimen/px260" android:layout_height="@dimen/px260" android:layout_toRightOf="@+id/rel_boy">
                <ImageView android:id="@+id/iv_sex_girl" android:clickable="true" android:layout_width="@dimen/px100" android:layout_height="@dimen/px100" android:src="@drawable/selsex_girl" android:layout_centerHorizontal="true"/>
                <TextView android:textSize="@dimen/px28" android:id="@+id/tv_sex_girl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px40" android:text="女生" android:layout_below="@+id/iv_sex_girl" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:background="#efeff0" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/px2"/>
        <RelativeLayout android:background="@drawable/white_bottom_corner" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/px120">
            <Button android:textSize="@dimen/px32" android:textColor="#2a8afb" android:id="@+id/btu_confirm" android:background="@drawable/white_bottom_corner" android:layout_width="match_parent" android:layout_height="match_parent" android:text="确定" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>