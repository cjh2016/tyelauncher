        </RelativeLayout>
        <RelativeLayout android:layout_width="@dimen/px520" android:layout_height="@dimen/px151">
            <ImageView android:id="@+id/iv_dialog_close" android:layout_width="wrap_content" android:layout_height="@dimen/px151" android:src="@drawable/dialog_close" android:scaleType="centerInside" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>