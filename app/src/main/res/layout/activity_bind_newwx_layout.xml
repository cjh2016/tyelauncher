<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#fff6f6f6" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header_content_rl" android:background="#4d9df8" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:id="@+id/title_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" layout="@layout/activity_title_layout"/>
    </RelativeLayout>
    <ImageView android:id="@+id/line_view" android:paddingLeft="12dp" android:paddingTop="140dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="121dp" android:src="@drawable/pic_arrow" android:layout_below="@+id/header_content_rl" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="104dp" android:layout_above="@+id/step_one_ll">
        <ImageView android:id="@+id/iv_tip" android:background="@drawable/pic_mom" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RelativeLayout android:gravity="center" android:background="@drawable/pic_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/iv_tip">
            <TextView android:textSize="15sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="绑定学习机\10随时了解孩子学习状况，并对学习机进行管理" android:lineSpacingExtra="8dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/step_one_ll" android:background="@drawable/bg_bind_wx" android:layout_width="360dp" android:layout_height="303dp" android:layout_marginLeft="75dp" android:layout_toLeftOf="@+id/line_view" android:layout_below="@+id/header_content_rl" android:layout_alignTop="@+id/line_view">
        <RelativeLayout android:background="@drawable/title_bind_wx" android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:textSize="18sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="01 关注公众号" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textColor="#333333" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/follow_hint_text" android:lineSpacingExtra="8dp"/>
        <ImageView android:layout_gravity="center_horizontal" android:layout_width="120dp" android:layout_height="120dp" android:layout_marginTop="25dp" android:src="@drawable/pic_qrcode01"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/step_two_ll" android:background="@drawable/bg_bind_wx" android:layout_width="360dp" android:layout_height="303dp" android:layout_marginRight="75dp" android:layout_toRightOf="@+id/line_view" android:layout_below="@+id/header_content_rl" android:layout_alignTop="@+id/line_view">
        <RelativeLayout android:background="@drawable/title_bind_wx" android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:textSize="18sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="02 绑定学习机" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textColor="#333333" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/bind_hint_text" android:lineSpacingExtra="8dp"/>
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_eria2" android:padding="1dp" android:layout_width="120dp" android:layout_height="120dp" android:layout_marginTop="25dp" android:src="@drawable/def_qr_shape" android:scaleType="fitXY"/>
    </LinearLayout>
    <Button android:textSize="16sp" android:textColor="#80ffffff" android:id="@+id/bind_wx_ok_btn" android:background="@drawable/bind_ok_prepare" android:layout_width="290dp" android:layout_height="40dp" android:layout_marginBottom="38dp" android:text="我已绑定" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>