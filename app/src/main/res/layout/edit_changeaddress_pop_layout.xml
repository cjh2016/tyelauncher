<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:id="@+id/ly_myinfo_changeaddress" android:background="#99000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/pop_district" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:layout_above="@+id/ly_myinfo_changeaddress_child" android:layout_centerHorizontal="true">
        <TextView android:textSize="14sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="45dp" android:layout_marginRight="15dp" android:text="请选择你实际上学的城市，不同地区的教材\10版本可能不一致" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ly_myinfo_changeaddress_child" android:background="@drawable/shape_pop_bg" android:layout_width="400dp" android:layout_height="300dp" android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/px28" android:textColor="#ff333333" android:gravity="center" android:background="@drawable/shape_pop_sex_grey" android:layout_width="match_parent" android:layout_height="@dimen/px100" android:text="选择城市" android:layout_alignParentRight="true"/>
        <View android:layout_width="match_parent" android:layout_height="@dimen/px2" android:layout_marginLeft="@dimen/px40" android:layout_marginRight="@dimen/px40"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/px322" android:layout_margin="@dimen/px24">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <framework.hz.salmon.view.WheelView android:layout_gravity="center_vertical" android:id="@+id/wv_address_province" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                <framework.hz.salmon.view.WheelView android:layout_gravity="center_vertical" android:id="@+id/wv_address_city" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <View android:background="#efefef" android:layout_width="match_parent" android:layout_height="@dimen/px1" android:layout_marginLeft="@dimen/px2" android:layout_marginRight="@dimen/px2"/>
        <View android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/px1"/>
        <TextView android:textSize="@dimen/px32" android:textColor="#0578fa" android:gravity="center" android:id="@+id/btn_confirm" android:background="@drawable/white_bottom_corner" android:layout_width="match_parent" android:layout_height="match_parent" android:text="确定" android:layout_alignParentRight="true"/>
    </LinearLayout>
</RelativeLayout>