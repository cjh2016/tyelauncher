<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:background="#ffffff" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="@dimen/px409">
                <RelativeLayout android:id="@+id/rel_login_up" android:background="@drawable/logintop_bar" android:layout_width="match_parent" android:layout_height="@dimen/px130">
                    <ImageView android:id="@+id/iv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/px30" android:layout_marginTop="@dimen/px65" android:src="@drawable/back_icon_selector"/>
                    <TextView android:textSize="@dimen/px36" android:textColor="#ffffffff" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px50" android:text="修改密码" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout android:gravity="center" android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/px78" android:layout_below="@+id/rel_login_up">
                    <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px50" android:src="@drawable/iflytek_icon_title" android:scaleType="centerInside" android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="#ffffffff" android:paddingTop="@dimen/px78" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/linear_oldpassword" android:background="@drawable/edit_bg_press" android:layout_width="@dimen/px600" android:layout_height="@dimen/px80">
                    <ImageView android:layout_width="@dimen/px48" android:layout_height="@dimen/px48" android:layout_marginLeft="@dimen/px24" android:src="@drawable/login_password" android:scaleType="centerInside"/>
                    <framework.hz.salmon.view.AutoHiddenHintEditText android:textSize="@dimen/px28" android:textColor="#ff333333" android:textColorHint="#ffb4b7b9" android:id="@+id/ver_code" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/px28" android:hint="请输入原密码" android:singleLine="true" android:maxLength="16" android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ" android:layout_weight="1" android:inputType="textPassword"/>
                    <ImageView android:id="@+id/iv_showclearpassword_old" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/px10" android:layout_marginRight="@dimen/px30" android:src="@drawable/but_close" android:scaleType="centerInside"/>
                    <ImageView android:id="@+id/iv_clearpassword_old" android:layout_width="@dimen/px35" android:layout_height="match_parent" android:layout_marginRight="@dimen/px30" android:src="@drawable/but_delete" android:scaleType="centerInside"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/red_color" android:gravity="left" android:id="@+id/tv_oldpassword_format" android:paddingLeft="@dimen/px15" android:visibility="gone" android:layout_width="@dimen/px620" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px15" android:text="密码格式有误"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/linear_newpassword" android:background="@drawable/edit_bg_press" android:layout_width="@dimen/px600" android:layout_height="@dimen/px80" android:layout_marginTop="@dimen/px40">
                    <ImageView android:layout_width="@dimen/px48" android:layout_height="@dimen/px48" android:layout_marginLeft="@dimen/px24" android:src="@drawable/login_password_his" android:scaleType="centerInside"/>
                    <framework.hz.salmon.view.AutoHiddenHintEditText android:textSize="@dimen/px28" android:textColor="#ff333333" android:textColorHint="#ffb4b7b9" android:id="@+id/password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/px28" android:hint="请设置6~16位新密码" android:singleLine="true" android:maxLength="16" android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ" android:layout_weight="1" android:inputType="textPassword"/>
                    <ImageView android:id="@+id/iv_showclearpassword" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/px10" android:layout_marginRight="@dimen/px30" android:src="@drawable/but_close" android:scaleType="centerInside"/>
                    <ImageView android:id="@+id/iv_clearpassword" android:layout_width="@dimen/px35" android:layout_height="match_parent" android:layout_marginRight="@dimen/px30" android:src="@drawable/but_delete" android:scaleType="centerInside"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/red_color" android:gravity="left" android:id="@+id/tv_passwod_format" android:paddingLeft="@dimen/px15" android:visibility="gone" android:layout_width="@dimen/px620" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px15" android:text="密码格式有误"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/linear_newpassword_again" android:background="@drawable/edit_bg_press" android:layout_width="@dimen/px600" android:layout_height="@dimen/px80" android:layout_marginTop="@dimen/px40">
                    <ImageView android:layout_width="@dimen/px48" android:layout_height="@dimen/px48" android:layout_marginLeft="@dimen/px24" android:src="@drawable/login_password" android:scaleType="centerInside"/>
                    <framework.hz.salmon.view.AutoHiddenHintEditText android:textSize="@dimen/px28" android:textColor="#ff333333" android:textColorHint="#ffb4b7b9" android:id="@+id/confirm_password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/px28" android:hint="请再次输入6~16位新密码" android:singleLine="true" android:maxLength="16" android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ" android:layout_weight="1" android:inputType="textPassword"/>
                    <ImageView android:id="@+id/iv_showclearpassword_2" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/px10" android:layout_marginRight="@dimen/px30" android:src="@drawable/but_close" android:scaleType="centerInside"/>
                    <ImageView android:id="@+id/iv_clearpassword_2" android:layout_width="@dimen/px35" android:layout_height="match_parent" android:layout_marginRight="@dimen/px30" android:src="@drawable/but_delete" android:scaleType="centerInside"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/red_color" android:gravity="left" android:id="@+id/tv_passwod_format_again" android:paddingLeft="@dimen/px15" android:visibility="gone" android:layout_width="@dimen/px620" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px15" android:text="两次密码不一致"/>
                <TextView android:textSize="@dimen/text_size_12sp" android:textColor="#cccccc" android:gravity="left" android:id="@+id/tv_notice" android:layout_width="@dimen/px600" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px10" android:text="仅支持字母，数字的组合，长度为6-16位,不支持纯数字或英文"/>
                <Button android:enabled="false" android:textSize="@dimen/px32" android:textColor="#ffffffff" android:id="@+id/change_pass" android:background="@drawable/loginbutton_circle_grey" android:layout_width="@dimen/px600" android:layout_height="@dimen/px80" android:layout_marginTop="@dimen/px40" android:layout_marginBottom="@dimen/px60" android:text="修改密码"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>